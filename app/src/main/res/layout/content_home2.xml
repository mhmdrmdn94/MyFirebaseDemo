<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
   android:weightSum="10"
    android:background="#edd48e"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mohamed.myfirebase.Home2Activity"
    tools:showIn="@layout/activity_home2">



    <EditText
        android:id="@+id/addContactName"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:hint="Contact FullName"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="0dp" />


    <EditText
        android:id="@+id/addContactPhone"
        android:hint="Phone Number"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/addContactBtn"
        android:text="Add To Contacts"
        android:background="#87ced4"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="0dp" />



    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/allContactsBtn"
        android:text="All Contacts"
        android:background="#706a93"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="0dp" />




</LinearLayout>
